<%- include('header') %>

<!-- HERO SECTION -->
<div class="relative bg-gray-900 text-white h-[85vh] flex items-center justify-center text-center px-4">
    <div class="absolute inset-0 bg-black opacity-60 z-10"></div>
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('https://images.unsplash.com/photo-1589939705384-5185137a7f0f?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80');"></div>
    
    <div class="relative z-20 max-w-4xl mx-auto">
        <!-- Responsive Text Sizes: text-4xl on mobile, text-7xl on desktop -->
        <h1 class="text-4xl md:text-7xl font-extrabold mb-4 tracking-tight leading-tight">BusQuad <span class="text-yellow-500">Global Consults</span></h1>
        <p class="text-xl md:text-3xl font-light italic mb-8 border-l-4 border-yellow-500 pl-4 inline-block">"We bring your imaginations to reality"</p>
        <div class="flex flex-col md:flex-row justify-center gap-4 mt-8">
            <a href="#quote" class="bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-bold py-3 px-8 rounded-full shadow-lg">Get a Free Quote</a>
            <a href="#contact" class="border-2 border-white text-white font-bold py-3 px-8 rounded-full">Contact Us</a>
        </div>
    </div>
</div>

<!-- ABOUT US SECTION -->
<div id="about" class="py-16 bg-white">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row items-center gap-12">
            <div class="md:w-1/2">
                <div class="flex items-center gap-2 mb-4">
                    <span class="h-1 w-12 bg-yellow-500"></span>
                    <h2 class="text-gray-500 font-bold uppercase tracking-wider text-sm">About Our Company</h2>
                </div>
                <h3 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Over 10 Years of Excellence in Finishing</h3>
                <p class="text-gray-600 mb-6 leading-relaxed">
                    At <strong>BusQuad Global Consults</strong>, we don't just apply paint; we define spaces. For over a decade, we have been the silent architects of beauty for residential and commercial properties.
                </p>
                <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-gray-700 font-semibold">
                    <li><i class="fas fa-check-circle text-yellow-500 mr-2"></i> 10+ Years Experience</li>
                    <li><i class="fas fa-check-circle text-yellow-500 mr-2"></i> Premium Materials</li>
                    <li><i class="fas fa-check-circle text-yellow-500 mr-2"></i> On-Time Delivery</li>
                    <li><i class="fas fa-check-circle text-yellow-500 mr-2"></i> Professional Finish</li>
                </ul>
            </div>
            <!-- Images stack on mobile -->
            <div class="md:w-1/2 grid grid-cols-2 gap-4 mt-8 md:mt-0">
                <img src="https://images.unsplash.com/photo-1594943962657-3f338d128d5d?auto=format&fit=crop&w=600&q=80" class="rounded-lg shadow-xl w-full h-48 md:h-64 object-cover transform md:translate-y-8">
                <img src="https://plus.unsplash.com/premium_photo-1678752717095-08cd0bd1d7e7?auto=format&fit=crop&w=600&q=80" class="rounded-lg shadow-xl w-full h-48 md:h-64 object-cover">
            </div>
        </div>
    </div>
</div>

<!-- SERVICES SECTION -->
<div id="services" class="py-16 bg-gray-100">
    <div class="container mx-auto px-6">
        <div class="text-center max-w-3xl mx-auto mb-12">
            <h2 class="text-3xl font-bold text-gray-900 mb-4">Our Core Services</h2>
            <p class="text-gray-600">We offer a complete range of wall finishing solutions.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="bg-white rounded-xl shadow-lg overflow-hidden group">
                <img src="https://images.unsplash.com/photo-1589939705384-5185137a7f0f?auto=format&fit=crop&w=800" class="w-full h-48 object-cover">
                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Professional Painting</h3>
                    <p class="text-gray-600 text-sm">Interior and exterior painting using weather-resistant and washable paints.</p>
                </div>
            </div>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden group">
                <img src="https://images.unsplash.com/photo-1628744876497-eb30460be9f6?auto=format&fit=crop&w=800" class="w-full h-48 object-cover">
                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">POP & Screeding</h3>
                    <p class="text-gray-600 text-sm">Expert wall screeding for glass-like smoothness and intricate POP ceiling designs.</p>
                </div>
            </div>
            <div class="bg-white rounded-xl shadow-lg overflow-hidden group">
                <img src="https://images.unsplash.com/photo-1595188880628-98c56fa7439a?auto=format&fit=crop&w=800" class="w-full h-48 object-cover">
                <div class="p-6">
                    <h3 class="text-xl font-bold text-gray-900 mb-2">Paint Production</h3>
                    <p class="text-gray-600 text-sm">We formulate and produce high-quality paints tailored to your specific color needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- PORTFOLIO SECTION -->
<div id="portfolio" class="py-16 bg-white">
    <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Our Completed Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <% projects.forEach(p => { %>
                <div class="relative group overflow-hidden rounded-lg shadow-lg cursor-pointer">
                    <img src="<%= p.imageUrl %>" class="w-full h-64 object-cover">
                    <div class="absolute inset-0 bg-black bg-opacity-70 flex flex-col items-center justify-center p-4 text-center">
                        <h3 class="text-white font-bold text-lg mb-2"><%= p.title %></h3>
                        <p class="text-gray-300 text-sm"><%= p.description %></p>
                    </div>
                </div>
            <% }) %>
            <% if(projects.length === 0) { %>
                <div class="col-span-3 text-center py-10 bg-gray-50 rounded border border-dashed border-gray-300">
                    <p class="text-gray-500">No project photos uploaded yet.</p>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- QUOTE & CONTACT -->
<!-- Stacks vertically on mobile (grid-cols-1), side-by-side on desktop (md:grid-cols-2) -->
<div class="grid grid-cols-1 md:grid-cols-2 bg-blue-900 text-white">
    
    <!-- QUOTE FORM -->
    <div id="quote" class="p-8 md:p-16">
        <h2 class="text-2xl md:text-3xl font-bold mb-2">Request A Quote</h2>
        <p class="text-blue-200 mb-8">Tell us about your project.</p>
        
        <% if(success_msg != '') { %> 
            <div class="bg-green-500 text-white p-3 rounded mb-6 flex items-center">
                <i class="fas fa-check mr-2"></i> <%= success_msg %>
            </div> 
        <% } %>

        <form action="/quote" method="POST" enctype="multipart/form-data" class="space-y-4">
            <input type="text" name="customerName" placeholder="Full Name" class="w-full p-3 bg-blue-800 border border-blue-700 rounded text-white focus:outline-none focus:border-yellow-500" required>
            <input type="email" name="email" placeholder="Email Address" class="w-full p-3 bg-blue-800 border border-blue-700 rounded text-white focus:outline-none focus:border-yellow-500" required>
            <select name="service" class="w-full p-3 bg-blue-800 border border-blue-700 rounded text-white">
                <option>House Painting</option>
                <option>Wall Screeding</option>
                <option>POP Installation</option>
                <option>Paint Purchase</option>
            </select>
            <textarea name="details" rows="3" placeholder="Project Details" class="w-full p-3 bg-blue-800 border border-blue-700 rounded text-white focus:outline-none focus:border-yellow-500"></textarea>
            <label class="block text-sm text-blue-300">Reference Image (Optional)</label>
            <input type="file" name="quoteImage" class="w-full p-2 bg-blue-800 rounded text-sm text-blue-200">
            <button type="submit" class="w-full bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-bold py-3 rounded transition shadow-lg mt-4">Submit Request</button>
        </form>
    </div>

    <!-- CONTACT INFO -->
    <div id="contact" class="bg-blue-950 p-8 md:p-16 flex flex-col justify-center">
        <h2 class="text-2xl md:text-3xl font-bold mb-6">Contact Us</h2>
        
        <div class="space-y-8">
            <div class="flex items-start">
                <div class="bg-blue-800 p-3 rounded-full mr-4">
                    <i class="fas fa-phone-alt text-yellow-500 text-xl"></i>
                </div>
                <div>
                    <h4 class="font-bold text-lg">Call Us</h4>
                    <a href="tel:+2347030220713" class="text-blue-200 hover:text-white block mt-1 text-lg">+234 703 022 0713</a>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-blue-800 p-3 rounded-full mr-4">
                    <i class="fas fa-envelope text-yellow-500 text-xl"></i>
                </div>
                <div>
                    <h4 class="font-bold text-lg">Email Us</h4>
                    <a href="mailto:bqconsults@gmail.com" class="text-blue-200 hover:text-white block mt-1 break-all">bqconsults@gmail.com</a>
                </div>
            </div>

            <div class="flex items-start">
                <div class="bg-blue-800 p-3 rounded-full mr-4">
                    <i class="fas fa-map-marker-alt text-yellow-500 text-xl"></i>
                </div>
                <div>
                    <h4 class="font-bold text-lg">Office Address</h4>
                    <p class="text-blue-200">Suite 10, Corporate Plaza,<br>Lagos, Nigeria.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('footer') %>