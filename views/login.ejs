<%- include('header') %>
<div class="flex justify-center items-center h-screen">
    <form action="/login" method="POST" class="bg-white p-8 rounded shadow-md w-96">
        <h2 class="text-2xl font-bold mb-4">Login</h2>
        <% if(error_msg != '') { %> <div class="text-red-500 mb-2"><%= error_msg %></div> <% } %>
        <input type="email" name="email" placeholder="Email" class="w-full border p-2 mb-4 rounded" required>
        <input type="password" name="password" placeholder="Password" class="w-full border p-2 mb-4 rounded" required>
        <button class="w-full bg-blue-600 text-white py-2 rounded">Login</button>
        <a href="/register" class="block text-center mt-4 text-blue-500">Create Account</a>
    </form>
</div>
<%- include('footer') %>